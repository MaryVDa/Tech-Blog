{{#each post as |post|}}
<div class="row mb-4 post">
    <div class="col-md-5">
        <h2>
            <a href="/post/{{post.id}}">{{post.title}}</a>
        </h2>
        <p>
            <a href="/post/{{post.id}}">{{post.content}}</a>
        </p>
        <p>Created by {{post.user.username}} on {{format_date post.post_date}}</p>
    </div>
    <div class="col-md-7">
        <p>
            {{post.content}}
        </p>
    </div>
</div>
{{each}}